<h2><%= @cocktail.name %></h2>
<% @cocktail.doses.each do |dose| %>
<li>Description: <%= dose.description %> | Ingredient: <%= dose.ingredient.name %></li>
<li><%= link_to "Delete #{dose.ingredient.name}",
dose_path(dose),
method: :delete,
data: {confirm: "Really?"} %></li>
<% end %>
<%= link_to "Home", cocktails_path %>
<%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %>
